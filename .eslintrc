{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true,
        "jsx": true
    },
    "rules": {
        "arrow-parens": [2, "always"],
        "eol-last": ["error", "always"],
        "semi": [2, "always"],
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "sourceType": "module"
    }
}